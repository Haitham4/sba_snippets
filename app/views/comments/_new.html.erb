<% snippet ||= @snippet %>
<% comment ||= snippet.comments.build %>

<div class="row">
<%= form_for([snippet, comment]) do |f| %>
  <div class="form-group col-lg-12">
    <div class="row">
      <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6">
        <%= f.text_field :text, class: 'form-control form-control-xs' %>
      </div>
      <%= f.submit 'Create Comment', class: 'btn btn-primary', data: {disable_with: 'Create Comment'} %>
    </div>
  </div>
<% end %>
</div>
