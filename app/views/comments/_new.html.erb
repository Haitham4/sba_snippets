<% snippet ||= @snippet %>
<% comment ||= snippet.comments.build %>

<div class="row">
<%= form_for([snippet, comment]) do |f| %>
  <div class="form-group col-lg-12">
    <div class="row">
      <div class="col-xs-4">
        <%= f.text_field :text, class: 'form-control form-control-xs col-xs-4' %>
      </div>
      <%= f.submit 'Create Comment', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
</div>
