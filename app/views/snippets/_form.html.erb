    <%= f.label :language %><br>
    <%= render partial: 'languages/dropdown', locals: { f: f } %>
  </div>

  <div class="form-group">
    <%= f.label :code %>
    <%= f.text_area :code, class: 'form-control form-control-sm' %>
  </div>
